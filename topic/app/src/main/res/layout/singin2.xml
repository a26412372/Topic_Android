<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAF9DE">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="30dp"
        android:background="#ffe4c4"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_weight="0.5"
                android:orientation="vertical">



                <TextView
                    android:id="@+id/text2"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_gravity="right"
                    android:text="請輸入帳號" />

                <TextView
                    android:id="@+id/text3"
                    android:layout_width="wrap_content"
                    android:layout_height="37dp"
                    android:layout_gravity="right"
                    android:text="請輸入密碼" />

                <TextView
                    android:id="@+id/text4"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_gravity="right"
                    android:text="請輸入姓名" />

                <TextView
                    android:id="@+id/text5"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_gravity="right"

                    android:text="請輸入生日" />

                <TextView
                    android:id="@+id/text6"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_gravity="right"
                    android:text="請輸入地址" />

                <TextView
                    android:id="@+id/text7"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_gravity="right"
                    android:text="聯絡人" />

                <TextView
                    android:id="@+id/text8"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_gravity="right"
                    android:text="鑑定日期" />
                <TextView
                    android:id="@+id/text9"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_gravity="right"
                    android:text="重新鑑定日期" />
                <TextView
                    android:id="@+id/text10"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_gravity="right"
                    android:text="障礙類別" />
                <TextView
                    android:id="@+id/text11"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_gravity="right"
                    android:text="  ICD診斷" />


            </LinearLayout>

            <LinearLayout

                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:orientation="vertical">



                <EditText
                    android:id="@+id/text_account"
                    android:layout_width="200dp"
                    android:layout_height="40dp"
                    android:hint="例: A_ _ _ _ _ _ _ _ _" />

                <EditText
                    android:id="@+id/text_password"
                    android:layout_width="200dp"
                    android:layout_height="40dp"
                    android:text="" />

                <EditText
                    android:id="@+id/text_name"
                    android:layout_width="200dp"
                    android:layout_height="40dp"
                    android:text="" />


                <EditText
                    android:id="@+id/text_birthday"
                    android:layout_width="200dp"
                    android:layout_height="40dp"
                    android:hint="x年x月x日 或 0851010" />

                <EditText
                    android:id="@+id/text_address"
                    android:layout_width="200dp"
                    android:layout_height="40dp"
                    android:text="" />

                <EditText
                    android:id="@+id/text_contact"
                    android:layout_width="200dp"
                    android:layout_height="40dp"
                    android:text="" />
                <EditText
                    android:id="@+id/text_check_date"
                    android:layout_width="200dp"
                    android:layout_height="40dp"
                    android:hint="x年x月x日 或 1051010" />
                <EditText
                    android:id="@+id/text_recheck_date"
                    android:layout_width="200dp"
                    android:layout_height="40dp"
                    android:hint="x年x月x日 或 1071010" />
                <EditText
                    android:id="@+id/text_icf_code"
                    android:layout_width="200dp"
                    android:layout_height="40dp"
                    android:hint="輸入【 】內的數字即可" />
                <EditText
                    android:id="@+id/text_icd_code"
                    android:layout_width="200dp"
                    android:layout_height="40dp"
                    android:hint="輸入【 】內的數字即可" />


            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"

            android:gravity="center">
            <Button
                android:id="@+id/btn_gotesstwo"
                android:layout_width="100dp"
                android:layout_height="60dp"
                android:layout_marginRight="30dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:background="#ffffe0"
                android:text="影像辨識"
                android:textColor="#000"
                android:textSize="20dp"></Button>
            <Button
                android:id="@+id/bt_submit"
                android:layout_width="100dp"
                android:layout_height="60dp"
                android:layout_marginLeft="30dp"

                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:background="#ffffe0"
                android:text="送出"
                android:textColor="#000"
                android:textSize="20dp"></Button>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>



</ScrollView>